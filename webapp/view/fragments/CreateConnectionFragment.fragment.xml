<core:FragmentDefinition
    xmlns:unified="sap.ui.unified"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog id="addConnectionDialog">
        <form:SimpleForm>
            <form:content>
                <Label
                    text="Carrier ID"
                    labelFor="carrierInput"
                />
                <Input
                    id="carrierInput"
                    required="true"
                    type="Text"
                    value="{ 
                        path: 'newConn>/CarrierID',
                        type: 'sap.ui.model.type.String',
                        constraints: { minLength: 1, maxLength: 3 }
                    }"
                />
                <Label
                    text="Connection ID"
                    labelFor="connectionInput"
                />
                <Input
                    id="connectionInput"
                    required="true"
                    type="Text"
                    value="{ 
                        path: 'newConn>/ConnectionID'
                    }"
                />
                <Label
                    text="Airport From ID"
                    labelFor="airportFromInput"
                />
                <Input
                    id="airportFromInput"
                    type="Text"
                    value="{ 
                        path: 'newConn>/AirportFromID',
                        type: 'sap.ui.model.type.String',
                        constraints: { minLength: 1, maxLength : 3 }
                    }"
                />
                <Label
                    text="Airport To ID"
                    labelFor="airportToInput"
                    required="true"
                />
                <Input
                    id="airportToInput"
                    type="Text"
                    value="{ 
                        path : 'newConn>/AirportToID',
                        type: 'sap.ui.model.type.String',
                        constraints: { minLength: 1, maxLength : 3 }
                    }"
                />
                <Label
                    text="Country From"
                    labelFor="countryFromInput"
                />
                <Input
                    id="countryFromInput"
                    required="true"
                    type="Text"
                    value="{
                        path : 'newConn>/CountryFrom',
                        type: 'sap.ui.model.type.String',
                        constraints: { minLength: 1, maxLength : 3 }
                    }"
                />
                <Label
                    text="Country To"
                    labelFor="countryToInput"
                />
                <Input
                    id="countryToInput"
                    required="true"
                    type="Text"
                    value="{
                        path : 'newConn>/CountryTo',
                        type: 'sap.ui.model.type.String',
                        constraints: { minLength: 1, maxLength : 3 }
                    }"
                />
                <Label
                    text="City From"
                    labelFor="cityFromInput"
                />
                <Input
                    id="cityFromInput"
                    required="false"
                    type="Text"
                    value="{ 
                        path: 'newConn>/CityFrom',
                        type: 'sap.ui.model.type.String',
                        constraints: { minLength: 1, maxLength: 40 }
                    }"
                />
                <Label
                    text="City To"
                    labelFor="cityToInput"
                />
                <Input
                    id="cityToInput"
                    required="false"
                    type="Text"
                    value="{
                        path : 'newConn>/CityTo',
                        type: 'sap.ui.model.type.String',   
                        constraints: { minLength: 1, maxLength : 40}
                    }"
                />

                <Label
                    text="Price"
                    labelFor="idPriceInput"
                />

                <Input
                    id="idPriceInput"
                    value="{
                    path : 'newConn>/Price',
                    type : 'sap.ui.model.odata.type.Decimal',
                    formatOptions: {
                        decimals : 2,
                        parseAsString : true
                    },
                    constraints: {
                        minimum : 0,
                        scale: 2
                    }
                }"
                />

                <Label
                    text="Currency Code"
                    labelFor="idCurrencyCodeInput"
                />
                <Input
                    id="idCurrencyCodeInput"
                    value="{
                         path: 'newConn>/CurrencyCode'
                    }"
                />
            </form:content>
        </form:SimpleForm>
        <beginButton>
            <Button
                text="Submit"
                type="Emphasized"
                press="onSubmitFragmentHandler"
            />
        </beginButton>
        <endButton>
            <Button
                type="Transparent"
                text="Cancel"
                press="closeConnectionCreationDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
